---
import type { PortfolioSection } from '@/types/sections/portfolio-section.types';
import DividedList from '@/web/components/divided-list.astro';
import Divider from '@/web/components/divider.astro';
import SectionCard from '@/web/components/section-card.astro';
import OpenSourceProject from './openSourceProject.astro';

export interface Props extends PortfolioSection {}

const { config, openSourceProjects } = Astro.props;
const size = openSourceProjects.length;
---

<SectionCard {...config} counter={size} isCollapsible>
  <DividedList>
    {openSourceProjects.flatMap((openSourceProject) => [<OpenSourceProject {...openSourceProject} screenshotsConfig={config.screenshots} />, <Divider />])}
  </DividedList>
</SectionCard>
