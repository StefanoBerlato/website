---
import type { ResearchProjectSection } from '@/types/sections/research-project-section.types';
import DividedList from '@/web/components/divided-list.astro';
import Divider from '@/web/components/divider.astro';
import SectionCard from '@/web/components/section-card.astro';
import ResearchProject from './researchProject.astro';

export interface Props extends ResearchProjectSection {}

const { config, researchProjects } = Astro.props;
---

<SectionCard {...config}>
  <DividedList>
    {researchProjects.flatMap((researchProject) => [<ResearchProject {...researchProject} screenshotsConfig={config.screenshots} />, <Divider />])}
  </DividedList>
</SectionCard>
