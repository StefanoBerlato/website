---
import type { ReviewsSection } from '@/types/sections/reviews-section.types';
import Divider from '@/web/components/divider.astro';
import SectionCard from '@/web/components/section-card.astro';
import Reviews from './reviews.astro';

export interface Props extends ReviewsSection {}

const { config, reviews } = Astro.props;
---

<SectionCard {...config}>
  {reviews.flatMap((publication) => [<Reviews {...publication} />, <Divider />])}
</SectionCard>
