---
import type { PublicationsSection } from '@/types/sections/publications-section.types';
import Divider from '@/web/components/divider.astro';
import SectionCard from '@/web/components/section-card.astro';
import Publications from './publications.astro';

export interface Props extends PublicationsSection {}

const { config, publications } = Astro.props;
const size = publications.length;
---

<SectionCard {...config} counter={size} isCollapsible>
  {publications.flatMap((publication) => [<Publications {...publication} />, <Divider />])}
</SectionCard>
