---
import type { PublicationsSection } from '@/types/sections/publications-section.types';
import DashedDivider from '../components/dashed-divider.astro';
import Description from '../components/description.astro';
import ListItemHeading from '../components/list-item-heading.astro';
import SectionHeading from '../components/section-heading.astro';

export interface Props extends PublicationsSection {}

const { config, publications } = Astro.props;
---

<div>
  <SectionHeading>{config.title}</SectionHeading>
  <div class="flex flex-col">
    {
      publications.map(({ authors, title, venue, links, selected }) => () => (
        <>
          <div>
            <span class="text-base font-normal text-gray-600">{authors}</span>
            <span class="text-base font-medium text-gray-800">{title}</span>
            <span class="text-base font-normal text-gray-500">{venue}</span>
          </div>
          <DashedDivider />
        </>
      ))
    }
  </div>
</div>
