---
import type { ServiceSection } from '@/types/sections/service-section.types';
import DashedDivider from '../components/dashed-divider.astro';
import Description from '../components/description.astro';
import ListItemHeading from '../components/list-item-heading.astro';
import SectionHeading from '../components/section-heading.astro';

export interface Props extends ServiceSection {}

const { config, service } = Astro.props;
---

<div>
  <SectionHeading>{config.title}</SectionHeading>
  <div class="flex flex-col">
    {
      service.map(({ year, reviews }) => () => (
        <>
          <div>
            <p class="text-base font-medium text-gray-800">{year}</p>
            <p class="text-base font-medium text-gray-600">{reviews}</p>
          </div>
          <DashedDivider />
        </>
      ))
    }
  </div>
</div>